<!DOCTYPE html>
<html>
<head>
  <title>AngularOnRails</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body ng-app="CavernUs">

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <img class="navbar-icon" src="https://image.ibb.co/iF13qk/cavern_Us_Logo_Sm.png">

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <a class="navbar-brand" href="/">CavernUs</a>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/users">Users</a></li>
        <li><a href="/mines">Mines</a></li>
        <li><a href="/trips">Trips</a></li>
        <% if user_signed_in? %>
            <%# link_to 'Edit account', edit_user_registration_path, target: '_self' %>
            <li><a href="/profile">Profile</a></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete', target: '_self' %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>



<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


  <ui-view></ui-view>

<footer class="text-center">
  <div class="footer-above">
    <div class="container">
      <div class="row">
        <div class="footer-col col-md-12">
          <p>Link to Portfolio</p>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-below fixed-bottom">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          Copyright  J. Sutton Â© 2017
        </div>
      </div>
    </div>
  </div>
</footer>
</body>
</html>
