angular
    .module('CavernUs')
    .component('tripsPage', {
        templateUrl: '<%= asset_path("components/tripsPage/tripsPage") %>',
        controller: TripsPageController
    });

TripsPageController.$inject = ['$http'];

function TripsPageController($http) {
    var vm = this;

    vm.message = "Let's rock!";
    vm.mines = [];
    vm.users = [];
    vm.posts = [];
    vm.trips = [];

    $http.get('/api/mines').then(function(resp) {
        vm.mines = resp.data;
    });
    $http.get('/api/users').then(function(resp) {
        vm.users = resp.data;
    });
    $http.get('/api/posts').then(function(resp) {
        vm.posts = resp.data;
    });
    $http.get('/api/trips').then(function(resp) {
        vm.posts = resp.data;
    });
}